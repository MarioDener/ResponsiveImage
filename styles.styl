*
  border: none
  margin: 0
  padding: 0

body
  background-color #c9c9c9

.Container
  display block
  width 100%

.Container .Container__Notice
  margin 0
  width 100%
  header
    position relative
    width 100%
    figure
      height auto
      max-height 350px
      min-height 250px
      opacity 0.8
      overflow hidden
      img
        display: block
        margin: 0 auto
        max-width: 100%
        height: auto
        margin-top -8em
@media screen and (min-width: 0px) and (max-width: 320px)
  .Container__Notice header figure img
    width 100%
    margin-top 0em !important

@media screen and (min-width: 0px) and (max-width: 1280px)
  .Container__Notice header figure img
    margin-top 0em !important
